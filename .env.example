# Required startup settings
MEALIE_URL=http://your.server.ip.address:9000/api
MEALIE_API_KEY=your_mealie_api_key
WEB_BOOTSTRAP_USER=admin
WEB_BOOTSTRAP_PASSWORD=change-me
MO_WEBUI_MASTER_KEY=replace-with-strong-master-key

# Web UI server defaults
WEB_BIND_HOST=127.0.0.1
WEB_BIND_PORT=4820
WEB_BASE_PATH=/cookdex
WEB_STATE_DB_PATH=cache/webui/state.db
WEB_SESSION_TTL_SECONDS=43200

# GHCR image defaults
COOKDEX_IMAGE=ghcr.io/thekannen/cookdex
COOKDEX_TAG=latest

# Optional provider defaults (can be managed via Web UI after startup)
CATEGORIZER_PROVIDER=chatgpt
OLLAMA_MODEL=mistral:7b
OPENAI_MODEL=gpt-4o-mini
OLLAMA_URL=http://host.docker.internal:11434/api
TAXONOMY_REFRESH_MODE=merge

# Optional provider secret
OPENAI_API_KEY=your_openai_api_key

# ─── Direct DB access (optional — enables --use-db on yield-normalize / recipe-quality) ───
# Bypasses HTTP API for bulk operations; dramatically faster on large libraries.
#
# PostgreSQL (most self-hosted Mealie installs):
#   If PostgreSQL only listens on localhost, open an SSH tunnel first:
#     ssh -N -L 5432:127.0.0.1:5432 aaron@192.168.99.180
#   Then set MEALIE_PG_HOST=localhost below.
#
MEALIE_DB_TYPE=postgres
MEALIE_PG_HOST=localhost
MEALIE_PG_PORT=5432
MEALIE_PG_DB=mealie_db
MEALIE_PG_USER=mealie__user
MEALIE_PG_PASS=your_mealie_db_password
#
# SQLite (Docker single-container installs):
# MEALIE_DB_TYPE=sqlite
# MEALIE_SQLITE_PATH=/app/data/mealie.db