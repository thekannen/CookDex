# Mealie connection (required)
MEALIE_URL=http://your.server.ip.address:9000/api
MEALIE_API_KEY=your_mealie_api_key

# Web UI bootstrap auth + encryption (required on first startup)
WEB_BOOTSTRAP_USER=admin
WEB_BOOTSTRAP_PASSWORD=change-me
MO_WEBUI_MASTER_KEY=replace-with-strong-master-key

# Web UI server
WEB_BIND_HOST=0.0.0.0
WEB_BIND_PORT=4820
WEB_BASE_PATH=/organizer
WEB_STATE_DB_PATH=cache/webui/state.db
WEB_SESSION_TTL_SECONDS=43200

# Docker image source
MEALIE_ORGANIZER_IMAGE=ghcr.io/thekannen/mealie-organizer
MEALIE_ORGANIZER_TAG=latest

# Default runtime provider/model settings
CATEGORIZER_PROVIDER=chatgpt
OLLAMA_MODEL=mistral:7b
OPENAI_MODEL=gpt-4o-mini
OLLAMA_URL=http://host.docker.internal:11434/api

# Taxonomy refresh defaults
TAXONOMY_REFRESH_MODE=merge

# Optional provider secret (for chatgpt provider)
OPENAI_API_KEY=your_openai_api_key

# Legacy compatibility (deprecated): CLI task runner env vars
# TASK=webui-server
# RUN_MODE=once
# RUN_INTERVAL_SECONDS=21600
# CLEANUP_APPLY=false
# MAINTENANCE_APPLY_CLEANUPS=false